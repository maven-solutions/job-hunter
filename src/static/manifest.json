{
  "name": "CareerAI",
  "description": "Unlock career opportunities with a simple click - our Chrome extension saves and organizes job listings seamlessly.",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Job Hunter",
    "default_icon": "icon.png"
  },
  "permissions": ["storage"],
  "homepage_url": "https://resumebuilder.joinswiftly.com",
  "host_permissions": ["https://resumebuilder.joinswiftly.com/*"],

  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "externally_connectable": {
    "matches": ["<all_urls>"]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; script-src-elem 'self' 'unsafe-inline' https://accounts.google.com/gsi/client;"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icon.png",
        "closeicon.svg",
        "lockedicon.svg",
        "unlockicon.svg",
        "logo.svg",
        "info.svg",
        "x.svg",
        "success.svg",
        "ovalbg.svg",
        "ovalbg2.svg",
        "hub.svg",
        "tick.svg",
        "linkedin.svg",
        "job.svg",
        "company.svg",
        "pin.svg",
        "waring.svg",
        "user.svg",
        "jobboard.svg",
        "simplyhired.svg",
        "indeed.svg",
        "ziprecruiter.svg",
        "dice.svg",
        "builtin.svg",
        "glassdoor.svg",
        "login.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
