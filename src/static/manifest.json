{
  "name": "CareerHub",
  "description": "Unlock career opportunities with a simple click - our Chrome extension saves and organizes job listings seamlessly.",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Job Hunter",
    "default_icon": "icon.png"
  },
  "permissions": ["storage"],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icon.png",
        "closeicon.svg",
        "lockedicon.svg",
        "unlockicon.svg",
        "logo.svg",
        "info.svg",
        "x.svg",
        "success.svg",
        "ovalbg.svg",
        "ovalbg2.svg",
        "hub.svg",
        "tick.svg",
        "linkedin.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
