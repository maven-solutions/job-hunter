{
  "name": "CareerAI - Search, Track and Autofill Jobs",
  "description": "Streamline your job hunt with CareerAI: Easily search and track jobs, autofill applications, and create resumes and cover letters.",
  "version": "1.2.1",
  "manifest_version": 3,
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CareerAI - Search, Track and Autofill Jobs",
    "default_icon": "icon.png"
  },
  "permissions": ["storage"],
  "homepage_url": "https://app.careerai.io",
  "host_permissions": ["https://app.careerai.io/*"],

  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "externally_connectable": {
    "matches": ["<all_urls>"]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; script-src-elem 'self' 'unsafe-inline' https://accounts.google.com/gsi/client;"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "C.svg",
        "icon.png",
        "closeicon.svg",
        "lockedicon.svg",
        "unlockicon.svg",
        "logo.svg",
        "info.svg",
        "x.svg",
        "success.svg",
        "ovalbg.svg",
        "ovalbg2.svg",
        "hub.svg",
        "tick.svg",
        "linkedin.svg",
        "job.svg",
        "company.svg",
        "pin.svg",
        "waring.svg",
        "user.svg",
        "jobboard.svg",
        "simplyhired.svg",
        "indeed.svg",
        "ziprecruiter.svg",
        "dice.svg",
        "builtin.svg",
        "glassdoor.svg",
        "login.svg",
        "light-loader.svg",
        "dark-loader.svg",
        "jobtrack.svg",
        "info-icon.svg",
        "icon-cross.png",
        "noJobImage.svg",
        "tailoredIcon.svg",
        "error.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
